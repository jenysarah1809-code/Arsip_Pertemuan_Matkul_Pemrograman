#include <iostream>
#include <fstream>

using namespace std;

int main(){
	ofstream myFile;
	string teks;
	
	cout << "Masukan teks yang ingin ditambahkna: ";
	getline(cin, teks);
	
	myFile.open("data.txt", ios::app);
	myFile << teks;
	
	cout << "Teks berhasil ditambahkan!" << endl;
	
	myFile.close();
	
}
